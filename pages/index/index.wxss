.can_box{
    width: 100%;
    height: 100rpx;
    background-color: #ffffff;
    padding: 10rpx;
}
.can_box button{
    width: 60%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    content: none;
}
.can_box button[type="default"] {
    color:#999;
}
.can_box button:after{
    border:0;
}
.devices_data{
    width: 100%;
    margin-top: 20rpx;
    background-color: #ffffff;
}
.devices_data .devices{
    width: 100%;
    height: 90rpx;
    position: relative;
    padding: 0 20rpx;
    line-height: 90rpx;
    color: #999;
    font-size: 28rpx;
}
.devices_data .devices:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 2rpx;
    border-bottom: 2rpx solid #E5E5E5;
    color: #E5E5E5;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}
.devices_data .devices text{
    height: 90rpx;
    margin-right: 20rpx;
    color: #666;
}
.control_box{
    width: 100%;
    background-color: #ffffff;
    margin-top: 20rpx;
    padding: 40rpx 60rpx;
}
.control_box .control_link{
    width: 100%;
    height: 80rpx;
    margin-bottom: 40rpx;
    line-height: 80rpx;
}
.control_box .control_link .steps_data_count{
    width: 100%;
    text-align: center;
    font-size: 64rpx;
    color: #ff8929;
}
.control_box .control_link .steps_data_count text{
    font-size: 28rpx;
    color: #999;
    margin-left: 20rpx;
}
.control_box .control_link button{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    color: #999;
}